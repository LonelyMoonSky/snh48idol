/* 头部 */

header {
    position: absolute;
    display: flex;
    padding-left: 20rpx;
    height: 10vh;
    width: 100%;
    z-index: 1;
    /* background-color: #D15246; */
    line-height: 10vh;
}

header image {
    margin-top: 20rpx;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}

header view {
    margin-top: 20rpx;
}

.name {
    margin-left: 20rpx;
    line-height: 100rpx;
    font-weight: 800;
    font-size: 50rpx;
}

.box {
    margin-bottom: 20rpx;
    padding-top: 150rpx;
    height: 90vh;
    color: #ccc;
}

.liBox {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    font-weight: 100;
    text-align: center;
}

.boxli {
    display: flex;
    flex-direction: column;
    margin: 10rpx 0 0 0;
    width: 100%;
    border-bottom: 1px solid #ccc;
    height: 172rpx;
    color: #000;
}

.boxli:last-child {
    border: 0;
}

.video {
    display: flex;
    padding-left: 20rpx;
}

.video image {
    height: 162rpx;
    width: 288rpx;
    margin-right: 10rpx;
    border-radius: 2%;
}

.video view {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 160rpx;
    width: 400rpx;
    font-size: 30rpx;
    font-weight: 500;
    text-align: left;
}

.video .textHeader {
    font-size: 26rpx;
    height: 146rpx;
}

.video .time {
    height: 20rpx;
    text-align: right;
    font-size: 20rpx;
    color: #ccc;
}