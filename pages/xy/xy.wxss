/* pages/xy/xy.wxss */

.main {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100vh;
    width: 100%;
}

.xy-header {
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
    height: 100rpx;
    background-color: rgba(255, 255, 255);
    opacity: .8;
}

.img {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.weatherImage {
    height: 100rpx;
    width: 100rpx;
    margin-left: 10rpx;
}

.foot {
    height: 10vh+20rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    background-color: rgba(209, 82, 70, .4);
    margin-bottom: 10vh;
}

.footl,
.footr {
    height: 10vh;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.imgl,
.imgr {
    margin-top: 10rpx;
    height: 80rpx;
    width: 80rpx;
}

.textl,
.textr {
    color: #7FFFD4;
    font-size: 30rpx;
}

.bg {
    height: 100vh;
    width: 100%;
    position: absolute;
    z-index: -1;
}