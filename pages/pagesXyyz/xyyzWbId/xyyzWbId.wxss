.box {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
}

.headImg {
    height: 135rpx;
    width: 135rpx;
    border-radius: 50%;
}

.name {
    font-weight: 800;
    font-size: 50rpx;
}

.content {
    margin-top: 10rpx;
    border-top: 1rpx solid #ccc;
}

.imgbox {
    display: flex;
    flex-wrap: wrap;
    width: 630rpx;
}

.img {
    margin-right: 10rpx;
    height: 200rpx;
    width: 200rpx;
}

.img:nth-child(3n) {
    margin: 0;
}

.time {
    padding-right: 20rpx;
    text-align: right;
    font-size: 20rpx;
    color: #ccc;
}

.foot {
    font-weight: 600;
    font-size: 40rpx;
    color: #D15246;
    text-align: center;
    margin-bottom: 20rpx;
}